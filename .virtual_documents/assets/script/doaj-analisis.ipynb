# Función para cargar un librerias y notificar errores
cargar_paquete <- function(pkg){
  tryCatch({
    library(pkg, character.only = TRUE)
    message("Cargado correctamente: ", pkg)
  }, error = function(e){
    warning("No se pudo cargar: ", pkg, "\n", e)
  })
}

